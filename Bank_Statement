# ------------------------------------
# üè¶ BANK ACCOUNT BALANCE CHECK SYSTEM
# ------------------------------------

balance = 5000  # initial account balance (you can change it)

def check_balance():
    print(f"\nüí∞ Current Bank Balance : ‚Çπ{balance}\n")

def deposit(amount):
    global balance
    balance += amount
    print(f"‚úî ‚Çπ{amount} Deposited Successfully!")
    check_balance()

def withdraw(amount):
    global balance
    if amount > balance:
        print("‚ùó Insufficient Balance!")
    else:
        balance -= amount
        print(f"‚úî ‚Çπ{amount} Withdrawn Successfully!")
    check_balance()


# --------- Main Program ---------

print("\nüè¶ Welcome to Python Bank System\n")

while True:
    print("""
    ------------------------------
       1. Check Balance
       2. Deposit Money
       3. Withdraw Money
       4. Exit
    ------------------------------
    """)

    choice = input("Enter Your Choice: ")

    if choice == "1":
        check_balance()

    elif choice == "2":
        amt = float(input("Enter Amount to Deposit: ‚Çπ"))
        deposit(amt)

    elif choice == "3":
        amt = float(input("Enter Amount to Withdraw: ‚Çπ"))
        withdraw(amt)

    elif choice == "4":
        print("\nüëã Thank you for using our Bank System.")
        break

    else:
        print("‚ùó Invalid Choice! Please Try Again.")
